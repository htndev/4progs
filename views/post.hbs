<div class="container">
<main class="z-depth-3">
	<!-- POSTS -->
	<div id="posts">
		<div class="post" data-place="{{post.postBy}}" data-post="{{post.id}}" data-type="post">
			<div class="post__header" data-role="header-to-post">
				<!-- POST HEADER -->
				<a class='dropdown-trigger btn waves-circle btn-floating waves-effect waves-red' data-target='post-popup-1'><i class="material-icons">more_horiz</i></a>
				<!-- Dropdown Structure -->
				<ul class="dropdown-content" id='post-popup-1'>
					<li><a class="waves-effect waves-red" data-role="copy-post-link"><i class="material-icons">insert_link</i>CopyLink</a></li>
					{{#if available}}
						<li><a class="waves-effect waves-red" data-role="delete-post" data-post="{{post.id}}"><i class="material-icons">delete_forever</i>Delete</a></li>
					{{/if}}
					<li><a class="waves-effect waves-red modal-trigger" data-role="report" data-target="report"><i class="material-icons">report</i>Report</a></li>
				</ul>
				<a href="/{{post.headingType}}/{{post.postInfo.name}}"><img alt="{{post.postInfo.title}}" class="post__header__publisher-img" src="{{post.postInfo.avatar}}"></a>
				<div class="post__header__info">
					<a href="/{{post.headingType}}/{{post.postInfo.name}}"><h4 class="post__header__title">{{post.postInfo.title}}</h4></a>
					<p>{{post.date}}</p>
				</div>
			</div>
			<div class="post__body">
				<!-- POST TEXT -->
				<p class="post__body__text">{{{post.text}}}</p>
				<div class="post__body__photos">
					{{#each post.photos}}
						<img alt="{{post.postInfo.title}}'s image" class="materialboxed" src="{{this}}">
					{{/each}}
				</div>
				<div class="post__body__code">
					<script src="public/javascripts/prism.js"></script>
					{{#each post.snippets}}
						<pre class="line-numbers"><code class="language-{{this.language}}">{{this.code}}</code></pre>
					{{/each}}
				</div>
				<p class="post__body__author"><a href="/p/{{post.author.username}}">{{post.author.title}}</a></p>
			</div>
			<div class="post__footer">
				<span><a class="btn waves-circle btn-floating waves-effect waves-red"><i class="material-icons" data-role="like" data-post-id="{{post.id}}">thumb_up</i></a><span data-like-place="{{post.id}}">{{post.likes}}</span></span>
			</div>
		</div>
	</div>
	<!-- PLACE FOR YOUR COMMENT -->
	<div id="comment">
		<div class="row">
			<div class="col s12">
				<form action="post/comment" method="post" name="comment">
					<div class="row">
						<div class="input-field col s11">
							<i class="prefix"><img alt="User" src="{{user.avatar}}" id="userAvatar"></i>
							<textarea name="comment" class="materialize-textarea" data-length="320" id="comment_area" maxlength="320"></textarea>
							<label for="comment_area">Your comment</label>
						</div>
						<div class="col s1 valign-wrapper">
							<button class="btn-floating waves-effect waves-light" name="action" type="submit"><i class="material-icons">send</i></button>
						</div>
					</div>
				</form>
			</div>
		</div>
	</div>
	<div id="comments">
		<div class="row">
			<div class="col s12">
				{{#each comments}}
					<div class="comment">
						<div class="comment__date"><span>{{this.content.date}}</span></div>
						<a href="/p/{{this.user.user_name}}"><img alt="Username" class="comment__photo" src="{{this.user.avatar}}"></a>
						<div class="comment__data">
							<a href="/p/{{this.user.user_name}}"><h5>{{this.user.user_title}}</h5></a>
							<p>{{{this.content.comment}}}</p>
						</div>
						<a class="btn-floating btn-small waves-effect waves-light red reply"><i class="material-icons" data-role="reply">reply</i></a>
					</div>
				{{/each}}
			</div>
		</div>
	</div>
