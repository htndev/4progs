<style>
	@import url("https://fonts.googleapis.com/css?family=Open+Sans:400,400i,700|Oswald:400,600|Roboto+Condensed&subset=cyrillic");

	main {
		width:  80%;
		margin: 1rem auto 2rem;
	}

	main #comment form i {
		left: 0.3rem;
	}

	main #comment form i img {
		display:       block;
		width:         3rem;
		height:        auto;
		border-radius: 50%;
	}

	main #comment form .btn-floating {
		border-radius: 50%;
		text-align:    center;
	}

	main #comment form .s1 {
		width: auto;
	}

	main #comment form .s1 i {
		width: 100%;
	}

	main #comments .comment {
		display:       -webkit-box;
		display:       -ms-flexbox;
		display:       flex;
		border:        1px solid #535c68;
		background:    #2f3542;
		border-radius: 0.4rem;
		padding:       0.5rem;
		position:      relative;
	}

	main #comments .comment:not(:last-child) {
		margin-bottom: 1rem;
	}

	main #comments .comment .reply {
		position: absolute;
		bottom:   0.1rem;
		right:    0.1rem;
	}

	main #comments .comment a {
		color: #c0392b;
	}

	main #comments .comment__date {
		position:  absolute;
		color:     #535c68;
		right:     0.5rem;
		font-size: 0.7em;
	}

	main #comments .comment__photo {
		border-radius: 50%;
		width:         3rem;
		height:        3rem;
		margin-right:  0.5rem;
	}

	main #comments .comment__data h5 {
		padding:   0;
		margin:    0;
		font-size: 1.1em;
	}

	main #comments .comment__data p {
		color:         #ecf0f1;
		font-size:     0.9em;
		margin-bottom: 1rem;
	}

	@media all and (max-width: 600px) {
		.container {
			width: 100%;
		}

		.container main {
			width: 100%;
		}
	}
</style>
