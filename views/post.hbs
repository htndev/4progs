<div class="modal" id="report">
	<form action="/d/report/receive" method="post" name="report">
		<div class="modal-content">
			<h4>Report</h4>
			<div class="report__object">
				<img alt="Reported object" class="z-depth-1" id="report-img" src="{{post.postInfo.avatar}}">
				<div class="report__object__info">
					<a target="_blank"><h4 id="report-group-title">{{post.postInfo.title}}</h4></a>
					<p>Reported object: <a class="report__object__link" href="/post/{{post.postBy}}/{{post.id}}" target="_blank">link</a></p>
				</div>
			</div>
			<div class="report__user-entry">
				<div class="input-field col s12">
					<select name="reason">
						<option disabled selected value="another">Choose your option</option>
						<option value="harassment">Harassment</option>
						<option value="spam">Spam</option>
						<option value="verbal-abuse">Verbal Abuse</option>
						<option value="another">Another</option>
					</select>
					<label>Report reason's:</label>
				</div>
				<input type="hidden" name="reportType" id="reportType" value="post">
				<input type="hidden" name="reportId" id="reportId" value="{{post.id}}">
				<textarea name="comment" placeholder="Optional (max 130 symbols)"></textarea>
			</div>
		</div>
		<div class="modal-footer">
			<a class="modal-close waves-effect waves-green btn-flat">Close</a>
			<button type="submit" class="modal-close btn-flat">Send</button>
		</div>
	</form>
