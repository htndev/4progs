    <div class="container">
      <main class="z-depth-2">
        <h1 class="center-align">Edit group</h1>
        <div class="row">
          <div class="col s12">
            <form action="/g/update" method="post" name="updateGroup" enctype="multipart/form-data">
              <div class="row">
                <div class="container">
                  <div class="input-field col s12 m6">
                    <input type="text" name="title" id="group-title" value="{{group.title}}">
                    <label for="group-title">Group title</label>
                  </div>
                  <div class="input-field col s12 m6">
                    <input type="text" name="group_name" id="group-id" value="{{group.name}}">
                    <label for="group-id">Group id</label>
                  </div>
                </div>
              </div>
              <div class="row">
                <div class="container">
                  <div class="input-field col s12">
                    <textarea name="desc" class="materialize-textarea" id="group-description">{{group.desc}}</textarea>
                    <label for="group-description">Group description</label>
                  </div>
                </div>
              </div>
              <div class="container">
                <div class="row">
                  <div class="file-field input-field">
                    <div class="btn">
                      <span>Browse</span>
                      <input type="file" accept=".jpeg,.jpg,.png" value="photo" name="groupavatar">
                    </div>
                    <div class="file-path-wrapper">
                      <input class="file-path validate" type="text" placeholder="Group avatar">
                    </div>
                  </div>
                </div>
              </div>
              <div class="row right-align">
                <div class="container">
                  <button class="btn" type="submit">Update</button>
                </div>
              </div>
            </form>
          </div>
        </div>
      </main>
      <aside class="hide-on-med-and-down">
        <div class="collection">
          <a class="collection-item waves-effect waves-red" href="/p/{{user.username}}">Profile</a>
