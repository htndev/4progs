<style>
	.row .col.snippet {
		background:    #222f3e;
		padding:       .5rem 1rem;
		border-radius: .3rem;
		margin-bottom: .5rem;
		position:      relative;
	}

	.row .col.snippet:nth-child(even) {
		margin-left: 1rem;
	}

	.snippet__title {
		color:       #d1c4e9;
		font-family: 'Oswald', sans-serif;
		font-size:   1.9em;
	}

	.snippet__description {
		color:     #e0f2f1;
		font-size: 1.2em;
		margin:    1rem 0;
	}

	.snippet__language {
		color:       #c0392b;
		font-weight: 800;
	}

	.snippet__delete {
		position: absolute;
		right:    .5rem;
		top:      .5rem;
	}

	.snippet__type {
		color:       #D1D8E0;
		margin-top:  .5rem;
		font-family: 'Open Sans', sans-serif;
		font-style:  italic;
	}

	@media all and (max-width: 667px) {
		.row .col.snippet:nth-child(even) {
			margin-left: 0;
		}
	}
</style>
<script defer src="public/javascripts/snippet.js"></script>
<div id="preloader" class="visible"></div>
<a class="tooltipped btn-floating btn-large waves-effect waves-light red" data-position="left" data-tooltip="Go to the top!" id="to-the-top"><i class="material-icons large" data-role="to-top">keyboard_arrow_up</i></a>
<div class="modal" id="report">
      <form action="/">
        <div class="modal-content">
          <h4>Report</h4>
          <div class="report__object">
            <img alt="Reported object" class="z-depth-1" id="report-img" src="">
            <div class="report__object__info">
              <a href="#" target="_blank"><h4 id="report-group-title"></h4></a>
              <p>Post link: <a class="report__object__link" href="#" target="_blank">Go to post</a></p>
            </div>
          </div>
          <div class="report__user-entry">
            <div class="input-field col s12">
              <select>
                <option disabled selected value="">Choose your option</option>
                <option value="harassment">Harassment</option>
                <option value="spam">Spam</option>
                <option value="verbal-abuse">Verbal Abuse</option>
                <option value="another">Another</option>
              </select>
              <label>Report reason's:</label>
            </div>
            <textarea name="user-report-content" placeholder="Optional (max 130 symbols)"></textarea>
          </div>
        </div>
        <div class="modal-footer">
          <a class="modal-close waves-effect waves-green btn-flat">Close</a>
          <a class="modal-close waves-effect waves-green btn-flat"><input type="submit" value="Send"></a>
        </div>
      </form>
    </div>
