<div class="container">
	<main class="z-depth-3">
		<h1 class="center-align">Snippets</h1>
		<div class="container">
			<div class="row right-align">
				<a class="btn waves-effect waves-red red" href="/s/new">New</a>
			</div>
			{{#if snippetsExist}}
			<div class="row" id="snippets">
				{{#each snippets}}
					<div class="col s12 m5 snippet">
						<a href="/s/view/{{this.id}}"><h5 class="snippet__title">{{this.title}}</h5></a>
						<p class="snippet__description">{{this.desc}}</p>
						<p class="snippet__language">{{this.txtLan}}</p>
						<p class="snippet__type">{{this.visibility}}</p>
						<a class="btn-floating btn-small waves-effect waves-red red snippet__delete"><i class="material-icons" data-role="delete-snippet" data-snippet="{{this.id}}">close</i></a>
					</div>
				{{/each}}
			{{else}}
				<div class="row center-align"><h4 style="color: #d1c4e9">No snippets yet. Wanna get started?</h4></div>
			</div>
			{{/if}}
		</div>
	</main>
	<aside class="hide-on-med-and-down">
		<div class="collection">
			<a class="collection-item waves-effect waves-red" href="/p/{{user.username}}">Profile</a>
			<a class="collection-item waves-effect waves-red" href="/msg">Messages</a>
			<a class="collection-item waves-effect waves-red" href="/friends">{{#if isRequest}}<span class="new badge">{{friendsNotification}}</span>{{/if}}Friends</a>
			<a class="collection-item waves-effect waves-red" href="/feed">Feed</a>
			<a class="collection-item waves-effect waves-red active" href="/s">Snippets</a>
			<a class="collection-item waves-effect waves-red" href="/g">Groups</a>
		</div>
	</aside>
</div>