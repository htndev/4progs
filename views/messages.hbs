	</header>
<div class="wrapper">
	<main class="z-depth-2">
		<div class="container">
			<h1 class="center-align" style="margin-bottom: 1rem;">Chat</h1>
			<div class="chat">
				<div class="row">
					<div class="col s12" id="message-place">
						{{#each messages}}
							<div class="row chat__msg">
								<div class="col s2 m2">
									<a href="/p/{{this.user_name}}"><img src="{{this.avatar}}" class="chat__img" alt="{{this.user_title}}"></a>
								</div>
								<div class="col s9 m10">
									<a href="/p/{{this.user_name}}"><h4 class="chat__title flow-text">{{this.user_title}}</h4></a>
									<p class="chat__message">{{this.text}}</p>
									<span class="chat__date">{{this.date}}</span>
								</div>
							</div>
						{{/each}}
					</div>
				</div>
			</div>
			<div class="row">
				<form action="/msg/new" method="post" name="message">
					<div class="col s11 input-field">
						<textarea id="message" class="materialize-textarea" name="text"></textarea>
						<label for="message">Your message</label>
					</div>
					<div class="col s1">
						<button type="submit" class="btn-floating waves-effect waves-red red"><i class="material-icons">send</i></button>
					</div>
				</form>
			</div>
		</div>
	</main>
	<aside class="hide-on-med-and-down">
		<div class="collection">
			<a class="collection-item waves-effect waves-red" href="/p/{{user.username}}">Profile</a>
			<a class="collection-item waves-effect waves-red active" href="/msg">Messages</a>
			<a class="collection-item waves-effect waves-red" href="/friends">{{#if isRequest}}<span class="new badge">{{friendsNotification}}</span>{{/if}}Friends</a>
			<a class="collection-item waves-effect waves-red" href="/feed">Feed</a>
			<a class="collection-item waves-effect waves-red" href="/s">Snippets</a>
			<a class="collection-item waves-effect waves-red" href="/g">Groups</a>
		</div>
	</aside>
</div>
<script>document.querySelector( '.chat' ).scrollTop = document.querySelector( '.chat' ).scrollHeight;</script>