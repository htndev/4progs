<div class="container">
    <main class="z-depth-2">
        <h1 class="center-align">New group</h1>
        <div class="row">
            <div class="col s12">
                <form action="/g/new" method="post" name="new_group" enctype="multipart/form-data">
                    <div class="row">
                        <div class="container">
                            <div class="input-field col s12 m6">
                                <input type="text" name="group_title" id="group-title">
                                <label for="group-title">Group title</label>
                            </div>
                            <div class="input-field col s12 m6">
                                <input type="text" name="group_id" id="group-id">
                                <label for="group-id">Group id</label>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="container">
                            <div class="input-field col s12">
                                <textarea name="group_description" class="materialize-textarea"
                                          id="group-description"></textarea>
                                <label for="group-description">Group description</label>
                            </div>
                        </div>
                    </div>
                    <div class="container">
                        <div class="row">
                            <div class="file-field input-field">
                                <div class="btn">
                                    <span>Browse</span>
                                    <input type="file" name="group_avatar" accept=".jpeg,.jpg,.png">
                                </div>
                                <div class="file-path-wrapper">
                                    <input class="file-path validate" type="text" placeholder="Group avatar">
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="row right-align">
                        <div class="container">
                            <button class="btn" type="submit">Create</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </main>

    <aside class="hide-on-med-and-down">
        <div class="collection">
            <a class="collection-item waves-effect waves-red active" href="/p/{{usr.0.user_name}}">Profile</a>
